<Window x:Class="GUIWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="585" Width="1176">
    <Grid>
        <Label x:Name="LabelTitulo" Content="Circunferencia" HorizontalAlignment="Center" Height="80" Margin="0,72,0,0" VerticalAlignment="Top" Width="428" FontSize="20"/>
        <Label x:Name="LabelRadio" Content="Ingrese Radio &gt; 0" HorizontalAlignment="Left" Margin="76,195,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="TexBoxRadio" HorizontalAlignment="Left" Height="31" Margin="264,195,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="467"/>
        <GroupBox x:Name="GroupBoxOperacion" HorizontalAlignment="Left" Height="120" Header="Seleccione Operación:" Margin="76,248,0,0" VerticalAlignment="Top" Width="403" FontSize="16">
            <StackPanel Height="80">
                <RadioButton x:Name="RadioButtonArea" Content="Área:" Margin="10,5"/>
                <RadioButton x:Name="RadioButtonPerimetro" Content="Perímetro:" Margin="10,5"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="ButtonCalcular" Content="Calcular" HorizontalAlignment="Left" Height="47" Margin="76,395,0,0" VerticalAlignment="Top" Width="403" Click="ButtonCalcular_Click"/>
        <Label x:Name="LabelResultado" Content="Resultado:" HorizontalAlignment="Left" Height="62" Margin="76,466,0,0" VerticalAlignment="Top" Width="655"/>

    </Grid>
</Window>
